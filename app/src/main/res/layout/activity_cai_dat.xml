<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiKhoan.listtaikhoan.CaiDatActivity"
    android:orientation="vertical">

 <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_thoat">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_close_24"
            />
      <TextView

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
 </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/loca"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginRight="95dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Địa điểm đã lưu"
                android:fontFamily="sans-serif"/>
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/us"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginRight="95dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Liên kết tài khoản"
                android:fontFamily="sans-serif"/>
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chuong"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginRight="95dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gửi thông báo"
                android:fontFamily="sans-serif"/>
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v4.5.1"
        android:layout_below="@+id/ll_tren"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"/>

</LinearLayout>