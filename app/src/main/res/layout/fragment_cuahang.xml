                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@drawable/duongvien4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/quan4_126">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img5_126"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <ImageView
                            tools:ignore="ContentDescription"
                            android:scaleType="centerCrop"
                            android:layout_width="220dp"
                            android:layout_height="160dp"
                            android:background="@drawable/cfnguyenchithanh" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/haichau4_126"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img5_126"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Quận Hải Châu"
                        android:textSize="18dp"
                        android:textColor="#343434">
                    </TextView>
                    <TextView
                        android:id="@+id/nguyenchithanh_126"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/haichau4_126"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:text="80A Nguyễn Chí Thanh"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#343434">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>