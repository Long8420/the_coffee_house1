<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cuahang.CuahangFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textSize="22dp"
            android:textColor="#343434"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="165dp"
            android:layout_marginBottom="15dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="#030303">
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapsView"
            android:name="com.google.android.gms.maps.SupportMapFragment">
        </com.google.android.gms.maps.MapView>
        <Button
            android:id="@+id/btnchonkhuvuc_126"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:text="Chọn khu vực"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/duongvien4"
            android:paddingLeft="10dp"
            android:drawableEnd="@drawable/ic_xoxuong">
        </Button>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnchonkhuvuc_126"
            android:layout_marginTop="280dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                //1. Quán 1
                <RelativeLayout
                    android:id="@+id/quan1_126"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/duongvien4">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img1_126"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <ImageView
                            tools:ignore="ContentDescription"
                            android:scaleType="centerCrop"
                            android:layout_width="220dp"
                            android:layout_height="160dp"
                            android:background="@drawable/cfnuithanh" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/haichau1_126"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1_126"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Quận Hải Châu"
                        android:textSize="18dp"
                        android:textColor="#343434">
                    </TextView>
                    <TextView
                        android:id="@+id/nuithanh_126"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/haichau1_126"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:text="01 Núi Thành"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#343434">
                    </TextView>
                </RelativeLayout>
