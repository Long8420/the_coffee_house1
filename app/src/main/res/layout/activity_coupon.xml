<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coupon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <ImageView
         android:id="@+id/quaylai"
      android:layout_marginTop="10dp"
     android:layout_marginLeft="5dp"
      android:layout_width="40dp"
       android:layout_height="40dp"
      android:src="@drawable/ic_quaylai">
    </ImageView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Coupon của bạn"
        android:textSize="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">
        <EditText
            android:id="@+id/edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Nhập mã khuyến mãi"
            android:layout_marginLeft="10dp"
            android:background="@drawable/vienedit"/>
        <ImageView
            android:id="@+id/scanqr"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/qr"/>
        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/vienbuttom1"
            android:layout_gravity="center"
            android:text="Áp dụng"
            android:textColor="#FFA07A"/>
    </LinearLayout>
    <LinearLayout

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/vienbuttom1"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/uudai1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="- Ưu đãi giảm 30.000đ cho đơn hàng từ 149.000đ"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Hạn sử dụng đến 30/11/2020"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>